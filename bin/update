#!/bin/bash

# First update packages
cd src/packages
git pull

# Chdir
cd ../../

# Do the magick
./bin/fix-permissions dev
git pull && ./bin/application-gen && ./bin/install-all && ./bin/minimize-scripts
./bin/fix-permissions live
./bin/makelocale.sh

# Restart apache
sudo /etc/init.d/apache2 restart

