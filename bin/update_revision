#!/bin/sh

sudo chown -R anders:anders public_html/media
sudo chown -R anders:anders .git
git checkout -- src/build/applications.xml
git pull origin master
sudo chown -R www-data:www-data logs
sudo chown -R www-data:www-data public_html/media
sudo chmod 755 public_html/media
sudo chmod 555 -R public_html/media/System
sudo chmod 555 -R public_html/media/Cloud
#./bin/documentation-gen
./bin/application-gen
./bin/minimize-scripts
